---
const { title, description } = Astro.props
---

<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--bg: #fff;
		--text: #111;
		--text-h2: #444;
		--text-p: #666;
		--text-span: #666;
		--border: #eee;
		--border-about: #eee;
		--border-hover: #ddd;
		--hover-icons: #eee;

		/* Botón tema claro */
		--btn-bg: #fff;
		--btn-border: #ddd;
		--btn-icon: #555;
		--btn-hover-bg: #f5f5f5;
		--btn-hover-border: #ccc;
		--focus: 2px solid #4da3ff;

		/* kbd tema claro */
		--footer-bg: #fdfdfd;
		--footer-border: #eee;
		--footer-text: #111;

		--kbd-bg: #f3f4f6;
		--kbd-border: #d1d5db;
		--kbd-text: #111827;
		--kbd-shadow: 0 1px 2px rgb(0 0 0 / 0.05);
	}

	.dark {
		--bg: #111;
		--text: #eee;
		--text-h2: #ddd;
		--text-p: #aaa;
		--text-span: #999;
		--border: #202020;
		--border-about: #3d3d3d;
		--border-hover: #2e2e2e;
		--hover-icons: #252525;

		/* Botón tema oscuro */
		--btn-bg: #111;
		--btn-border: #333;
		--btn-icon: #aaa;
		--btn-hover-bg: #222;
		--btn-hover-border: #555;
		--focus: 2px solid #4da3ff;

		/* kbd tema oscuro */
		--footer-bg: #111;
		--footer-border: #333;
		--footer-text: #aaa;
		--kbd-bg: #1f2937;
		--kbd-border: #374151;
		--kbd-text: #e5e7eb;
		--kbd-shadow: 0 1px 2px rgb(0 0 0 / 0.4);
	}

	html {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			"Courier New",
			Courier,
			monospace;
		background-color: var(--bg);
		color: var(--text);
		letter-spacing: -0.025rem;
	}

	body,
	figure {
		margin: 0;
		padding: 0;
	}

	a {
		text-decoration: none;
	}

	ul {
		list-style: none;
		margin: 0;
		padding: 0;
	}

	*,
	*::before,
	*::after {
		box-sizing: border-box;
	}

	h1,
	h2,
	h3,
	h4 {
		margin: 0;
		font-family:
			system-ui,
			-apple-system,
			BlinkMacSystemFont,
			"Segoe UI",
			Roboto,
			Oxygen,
			Ubuntu,
			Cantarell,
			"Open Sans",
			"Helvetica Neue",
			sans-serif;
	}

	p {
		color: var(--text-p);
		font-size: 0.9rem;
		line-height: 1.5;
		margin: 0;
		text-wrap: pretty;
	}

	@media print {
		.no-print {
			display: none !important;
		}
	}

	.print {
		display: none !important;
	}

	@media print {
		.print {
			display: block !important;
		}
	}
</style>
