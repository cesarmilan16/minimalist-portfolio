---
import Layout from "@/layouts/Layout.astro";

import Experience from "@/components/sections/Experience.astro";
import Projects from "@/components/sections/Projects.astro";
import Skills from "@/components/sections/Skills.astro";
import Hero from "@/components/sections/Hero.astro";
import About from "@/components/sections/About.astro";
import Education from "@/components/sections/Education.astro";
import KeyboardManager from "@/components/KeyboardManager.astro";
import cv from "@cv_english";

import { basics } from "@cv_english";

import ButtonTheme from "@/components/ButtonTheme.astro";
import ButtonLanguage from "@/components/ButtonLanguage.astro";

const { name, label } = basics;
---

<Layout
	title=`Portafolio de ${name} - ${label}`
	description="Portafolio personal de desarrollo web y software"
>
	<main>
		<ButtonTheme />
		<ButtonLanguage />
		<Hero cv={cv} />
		<About cv={cv} title="About" />
		<Experience cv={cv} title="Experience" />
		<Education cv={cv} title="Education" />
		<Projects cv={cv} title="Projects" />
		<Skills cv={cv} title="Skills" />
	</main>

	<KeyboardManager />
</Layout>

<style>
	main {
		padding: 4rem;
		margin: auto;
		width: 100%;
	}

	@media (max-width: 768px) {
		main {
			padding: 2rem;
		}
	}
</style>
