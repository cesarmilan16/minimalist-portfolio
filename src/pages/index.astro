  <body>
    <script>
      (function () {
        const headerLang = (navigator.language || 'en').split('-')[0].toLowerCase();
        const supported = ['es','en'];
        const lang = supported.includes(headerLang) ? headerLang : 'es';
        if (!location.pathname.startsWith('/' + lang + '/')) {
          location.replace('/' + lang + '/');
        }
      })();
    </script>
  </body>
</html>
