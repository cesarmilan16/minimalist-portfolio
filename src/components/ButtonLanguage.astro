    button {
        position: fixed;
        top: 32px;
        right: 80px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 36px;
        height: 36px;
        padding: 0;
        border-radius: 8px;
        border: 1px solid var(--btn-border);
        background-color: var(--btn-bg);
        color: var(--btn-icon);
        cursor: pointer;
        transition:
            background-color 0.2s ease,
            border-color 0.2s ease,
            color 0.2s ease,
            transform 0.08s ease;
    }

    button:hover {
        background-color: var(--btn-hover-bg);
