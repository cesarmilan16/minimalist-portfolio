---
import Section from "@/components/Section.astro";
import Git from "@/icons/git.astro";
import GitHub from "@/icons/GitHub.astro";
import Html from "@/icons/html.astro";
import Next from "@/icons/next.astro";
import Node from "@/icons/node.astro";
import Sql from "@/icons/sql.astro";
import Tailwind from "@/icons/tailwind.astro";
import Type from "@/icons/type.astro";
import React from "@/icons/react.astro";
import Css from "@/icons/css.astro";
import JavaScript from "@/icons/javascript.astro";

interface Skill {
    name: string;
}

const { cv, title } = Astro.props;
const skills: Skill[] = Array.isArray(cv?.skills) ? cv?.skills : [];

const SKILLS_ICONS: Record<string, any> = {
    HTML: Html,
    CSS: Css,
    JavaScript: JavaScript,
    Tailwind: Tailwind,
    TypeScript: Type,
    Node: Node,
    MySQL: Sql,
    Git: Git,
    GitHub: GitHub,
    Next: Next,
    React: React,
};
---

<Section title={title}>
    <ul>
        {
            skills.map(({ name }) => {
                const Icon = SKILLS_ICONS[name] || null;
                return (
                    <li>
                        {Icon && <Icon />}
                        <span>{name}</span>
                    </li>
                );
            })
        }
    </ul>
</Section>

<style>
    ul {
        display: inline-flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    li {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        border-radius: 6px;
        background: #eee;
        color: black;
        font-size: 0.8rem;
        font-weight: 500;
        padding: 0.4rem 0.8rem;
    }

    li:hover {
        background: #ccc;
    }

    span {
        text-align: center;
    }
</style>
