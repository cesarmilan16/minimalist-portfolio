---
import Section from "@/components/Section.astro";

const { cv, title } = Astro.props;
const projectsRaw = cv?.projects;
const projects = Array.isArray(projectsRaw) ? projectsRaw : [];

const safeProjects = projects.map((p) => ({
  url: p?.url ?? "",
  description: p?.description ?? "",
  highlights: Array.isArray(p?.highlights) ? p.highlights : [],
  name: p?.name ?? "",
  isActive: Boolean(p?.isActive),
}));

const remainderClass =
  safeProjects.length % 3 === 1
    ? "last-row-one"
    : safeProjects.length % 3 === 2
      ? "last-row-two"
      : "";
---

<Section title={title}>
    <ul class={remainderClass}>
        {
            safeProjects.map(({ url, description, highlights, name, isActive }) => {
                return (
                    <li>
                        <article>
                            <header>
                                <h3>
                                    <a
                                        href={url}
                                        title={`Ver el proyecto ${name}`}
                                    >
                                        {name}
                                    </a>
                                    {
                                        isActive && <span>&bull;</span>
                                    }
                                </h3>
                                <p>{description}</p>
                            </header>
                            <footer>
                                {highlights.map((highlight: string) => {
                                    return <span>{highlight}</span>;
                                })}
                            </footer>
                        </article>
                    </li>
                );
            })
        }
    </ul>
</Section>

<style>
    ul {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
    }

    @media (min-width: 900px) {
        ul {
            grid-template-columns: repeat(3, minmax(0, 1fr));
        }

        ul.last-row-one li:last-child {
            grid-column: 2;
        }

        ul.last-row-two li:last-child {
            grid-column: 3;
        }
    }

    article {
        border-radius: 6px;
        border: 2px solid var(--border);
        gap: 16px;
        display: flex;
        flex-direction: column;
        padding: 16px;
        height: 100%;
    }

    article header {
        flex: 1;
    }

    article h3 {
        margin-bottom: 4px;
    }

    article a {
        color: var(--text);
    }

    article a:hover {
        text-decoration: underline;
    }

    article p {
        font-size: 0.75rem;
        line-height: 1.2rem;
        margin-bottom: 4px;
    }

    article h3 span {
        color: #2db932;
    }

    footer {
        display: flex;
        flex-wrap: wrap;
        gap: 4px;
        font-size: 0.6rem;
    }

    footer span {
        border-radius: 6px;
        background: #eee;
        color: #333;
        font-size: 0.7rem;
        font-weight: 500;
        padding: 0.2rem 0.4rem;
    }
</style>
